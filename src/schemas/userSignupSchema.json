{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "User Signup Schema",
  "type": "object",
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "minLength": 6
    },
    "firstName": {
      "type": "string",
      "minLength": 1
    },
    "lastName": {
      "type": "string",
      "minLength": 1
    }
  },
  "required": ["email", "password", "firstName", "lastName"],
  "additionalProperties": false
}
