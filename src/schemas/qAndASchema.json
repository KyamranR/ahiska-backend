{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Q&A Schema",
  "type": "object",
  "properties": {
    "question": {
      "type": "string",
      "minLength": 1
    },
    "answer": {
      "type": ["string", "null"]
    },
    "askedBy": {
      "type": "integer",
      "minimum": 1
    },
    "answeredBy": {
      "type": ["integer", "null"],
      "minimum": 1
    }
  },
  "required": ["question", "askedBy"],
  "additionalProperties": false
}
